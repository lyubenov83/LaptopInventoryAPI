@model LaptopInventoryAPI.Models.Laptop

@{
    ViewData["Title"] = "Add Laptop";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.Message != null)
{
    <div style="color:green">@ViewBag.Message</div>
}

<form asp-action="Index" method="post">
    <div>
        <label asp-for="Brand"></label><br />
        <input asp-for="Brand" />
        <span style="color:red" asp-validation-for="Brand"></span>
    </div>
    <div>
        <label asp-for="Model"></label><br />
        <input asp-for="Model" />
        <span style="color:red" asp-validation-for="Model"></span>
    </div>
    <div>
        <label asp-for="Price"></label><br />
        <input asp-for="Price" type="number" step="0.01" />
        <span style="color:red" asp-validation-for="Price"></span>
    </div>
    <div>
        <label asp-for="Quantity"></label><br />
        <input asp-for="Quantity" type="number" />
        <span style="color:red" asp-validation-for="Quantity"></span>
    </div>
    <div>
        <label asp-for="InStock"></label><br />
        <input asp-for="InStock" type="checkbox" />
        <span style="color:red" asp-validation-for="InStock"></span>
    </div>
    <br />
    <button type="submit">Add Laptop</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
